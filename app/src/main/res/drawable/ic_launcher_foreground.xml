<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    
    <!-- Wrench -->
    <group android:translateX="54" android:translateY="54" android:rotation="-15">
        <path android:pathData="M-10,-8 L-10,-2 L-6,2 L0,-4 L4,0 L-2,6 L2,10 L-4,16 L-8,12 L-12,8 L-6,2 L-10,-2 Z" 
              android:fillColor="#FFFFFF"
              android:strokeColor="#4a5568"
              android:strokeWidth="1.5"
              android:strokeLineJoin="round"/>
        <circle android:centerX="-3" android:centerY="1" android:radius="2dp" android:fillColor="#4a5568"/>
    </group>
    
    <!-- Gear -->
    <group android:translateX="54" android:translateY="54" android:rotation="20">
        <path android:pathData="M8,-10 L10,-6 L14,-6 L16,-10 L20,-8 L18,-4 L22,-2 L20,2 L16,4 L14,8 L10,8 L8,4 L4,2 L2,-2 L6,-4 L4,-8 Z" 
              android:fillColor="#FFFFFF"
              android:strokeColor="#4a5568"
              android:strokeWidth="1.5"/>
        <circle android:centerX="12" android:centerY="-1" android:radius="4dp" 
                android:fillColor="#00000000" 
                android:strokeColor="#4a5568" 
                android:strokeWidth="2"/>
        <circle android:centerX="12" android:centerY="-1" android:radius="2dp" android:fillColor="#4a5568"/>
    </group>
    
    <!-- Screwdriver -->
    <group android:translateX="54" android:translateY="54" android:rotation="45">
        <rect android:x="6dp" android:y="12dp" android:width="3dp" android:height="20dp" 
              android:fillColor="#FFFFFF" 
              android:strokeColor="#4a5568" 
              android:strokeWidth="1"/>
        <rect android:x="5dp" android:y="30dp" android:width="5dp" android:height="4dp" 
              android:fillColor="#e53e3e" 
              android:strokeColor="#c53030" 
              android:strokeWidth="1"/>
    </group>
    
    <!-- Hammer Head -->
    <group android:translateX="54" android:translateY="54" android:rotation="-45">
        <rect android:x="16dp" android:y="8dp" android:width="12dp" android:height="6dp" 
              android:fillColor="#FFFFFF" 
              android:strokeColor="#4a5568" 
              android:strokeWidth="1.5"/>
        <rect android:x="8dp" android:y="10dp" android:width="8dp" android:height="2dp" 
              android:fillColor="#8b4513" 
              android:strokeColor="#654321" 
              android:strokeWidth="1"/>
    </group>
    
    <!-- Center Highlight -->
    <circle android:centerX="54" android:centerY="54" android:radius="6dp" 
            android:fillColor="#FFFFFF" 
            android:fillAlpha="0.3"/>
    <circle android:centerX="54" android:centerY="54" android:radius="4dp" 
            android:fillColor="#FFFFFF" 
            android:fillAlpha="0.5"/>
            
</vector>